        id        = "mob.app.dev.weathermaster"
        versionCode = "1"
        version   = "1.0.0">

    <name>Weather Master Test</name>

    <description>
        A sample application that counts the occurances of lifecycle events.
    </description>

    <author>
        ZZY
    </author>

    <plugin name="cordova-plugin-geolocation-android-activator" />
    <plugin name="cordova-plugin-geolocation"  />

    
    
